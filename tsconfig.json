{
	"compilerOptions": {
		"lib": [
			"ES2019"
		],
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./",
		"resolveJsonModule": true,
		"sourceMap": false,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"removeComments": true
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
