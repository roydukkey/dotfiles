			"import Vue from 'vue';",
			"import type { PropType } from 'vue';",
			"",
			"interface ComponentData {",
			"\t",
			"}",
			"",
			"export default Vue.extend({",
			"\tname: '${1:${TM_FILENAME_BASE}}',",
			"\tprops: {",
			"\t\titems: {",
			"\t\t\ttype: Array as PropType<string | string[]>",
			"\t\t\tdefault: []",
			"\t\t}",
			"\t},",
			"\tmethods: {",
			"\t\t",
			"\t},",
