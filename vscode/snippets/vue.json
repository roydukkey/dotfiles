	"Vue Wrapper Component": {
		"description": "Scaffolds a new Vue wrapper component using TypeScript and SCSS.",
		"prefix": "vuewrapper",
		"body": [
			"<template>",
			"\t<${1:ds-text} v-bind=\"\\$attrs\" v-on=\"\\$listeners\">",
			"\t\t<!-- Pass through scoped slots -->",
			"\t\t<template v-for=\"(_, name) in \\$scopedSlots\" v-slot:[name]=\"slotData\">",
			"\t\t\t<slot :name=\"name\" v-bind=\"slotData\" />",
			"\t\t</template>",
			"",
			"\t\t<!-- Pass through normal slots -->",
			"\t\t<template v-for=\"(_, name) in \\$slots\" v-slot:[name]>",
			"\t\t\t<slot :name=\"name\" />",
			"\t\t</template>",
			"",
